<h2>編輯 <%= @board.title %> 討論版</h2>

<% if @board.errors.any? %>
      <ul>
      <% @board.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>



<%= form_for @board, :url => board_path, :method => :put, :html => {:class => "form-horizontal well"} do |f| %>
<div class="control-group">
  <label class="control-label" for="topic_title">討論版名稱</label>
  <div class="controls">
    <%= f.text_field :title %>
  </div>
</div>



<div class="control-group">
  <div class="controls">
    <%= link_to("刪除討論版", board_path(@board), :method => "delete", :confirm => "確定要刪除嗎?", :class => "btn" ) %>
    <%= f.submit "送出",:class => "btn btn-primary" %>
  </div>
</div>

<% end %>


<%
  add_breadcrumbs("新增討論版")
%>

<% if @board.errors.any? %>
      <ul>
      <% @board.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<h2>新增討論版</h2>


<%= form_for @board, :url => boards_path, :html => {:class => "form-horizontal"} do |f| %>
<div class="control-group">
  <label class="control-label" for="topic_title">討論版名稱</label>
  <div class="controls">
    <%= f.text_field :title %>
  </div>
</div>

<div class="control-group">
  <div class="controls">
    <%= f.submit "送出",:class => "btn" %>
  </div>
</div>


<% end %>
<h2>編輯 <%= @topic.title %> 主題</h2>

<% if @topic.errors.any? %>
      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<%= form_for @topic, :url => board_topic_path(@board, @topic), :method => :put, :html => {:class => "form-horizontal well", :multipart => true} do |f| %>
<div class="control-group">
  <label class="control-label" for="topic_title">主題名稱</label>
  <div class="controls">
    <%= f.text_field :title %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="topic_title">內容</label>
  <div class="controls">
    <%= f.text_area :content,:rows => 10 %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="topic_title">上傳圖片</label>
  <div class="controls">
    <%= f.file_field :attach %>
  </div>
</div>

<div class="control-group">
  <div class="controls">
    <%= link_to("刪除", board_topic_path(@board, @topic), :method => "delete", :confirm => "確定要刪除嗎?",  :class => "btn" ) %>
    <%= f.submit "送出",:class => "btn btn-primary" %>
  </div>
</div>



<% end %>
